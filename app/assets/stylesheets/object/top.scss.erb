.top {
	height: 770px;
	background-image: url("<%= asset_path('nyanko.jpg') %>");
	background-size: cover;
	opacity: 0.5;

	.top-title {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translateY(-50%) translateX(-50%);
		text-align: center;
		font-size: 35px;

		h2 {
			font-family: "Urbanist", sans-serif;
		}
	}
}
